<%# app/views/devise/sessions/new.html.erb %>
<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-6">

      <h2 class="text-center">Sign in</h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'my-4' }) do |f| %>
        <div class="form-group">
          <%= f.label :email, class: 'form-label' %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :password, class: 'form-label' %>
          <%= f.password_field :password, autocomplete: "current-password", class: 'form-control' %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="form-group">
            <%= f.check_box :remember_me, class: 'form-check-input' %>
            <%= f.label :remember_me, class: 'form-check-label' %>
          </div>
        <% end %>

        <div class="form-group">
          <%= f.submit "Sign in", class: 'btn btn-primary btn-block' %>
        </div>
      <% end %>

      <hr />

      <div class="text-center">
        <p>or</p>
        <%= link_to "Sign up", new_user_registration_path, class: 'btn btn-outline-primary btn-block' %>
      </div>

    </div>
  </div>
</div>
